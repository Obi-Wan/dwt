
matlab=@HAVE_MATLAB@
octave=@HAVE_OCTAVE@

DEPDIR=.deps

VPATH=..

TARGET_MAKE=
TARGET_INSTALL=

MEXSUFFIX=@MEXSUFFIX@
MATLAB_MEX=dwt_haar.$(MEXSUFFIX)

OCTAVE_MEX=dwt_haar.mex

LDFLAGS=-ldwt -L../src/

enable_openmp=@enable_openmp@
ifeq ($(enable_openmp), yes)
LDFLAGS+=-lgomp
endif

ifeq ($(matlab), yes)

MEX = @MEX@

TARGET_MAKE+=mex
TARGET_INSTALL+=install-mex

#CPPFLAGS=@CPPFLAGS@
#CPPFLAGS+=-I../include
#LDFLAGS=@LDFLAGS@
#LDFLAGS+=-L../src/ -ldwt

mex: $(MATLAB_MEX)

%.$(MEXSUFFIX): FORCE
	$(MEX) $*.cpp -I../include $(LDFLAGS) -lut
FORCE:

install-mex: $(MATLAB_MEX)
	./install-sh -m 755 -d @prefix@/matlab

else ifeq ($(octave), yes)

MEX = @MKOCTFILE@

TARGET_MAKE+=mex
TARGET_INSTALL+=install-mex

mex: $(OCTAVE_MEX)

%.mex: FORCE
	$(MEX) $*.cpp -I../include --mex $(LDFLAGS)
FORCE:

install-mex: $(OCTAVE_MEX)
	./install-sh -m 755 -d @prefix@/octave

endif

all: $(TARGET_MAKE)

install: $(TARGET_INSTALL)

clean:
	rm -f $(MATLAB_MEX) $(OCTAVE_MEX)

 
